/**
 * @file secrets.h.example
 * @brief Template for WiFi credentials
 * 
 * @instructions
 * 1. Copy this file to 'secrets.h' in the same directory
 * 2. Fill in your actual WiFi credentials below
 * 3. The real secrets.h file is git-ignored for security
 * 
 * The firmware will use these credentials for WiFi Station mode,
 * allowing the device to connect to your existing network.
 */

#ifndef SECRETS_H
#define SECRETS_H

// ============================================================================
// WIFI STATION MODE CREDENTIALS (REQUIRED)
// ============================================================================

// Your WiFi network name (SSID)
#define WIFI_STA_SSID "YourNetworkSSID"

// Your WiFi password
#define WIFI_STA_PASSWORD "YourNetworkPassword"

// ============================================================================
// OPTIONAL OVERRIDES
// ============================================================================

// Override Access Point credentials (default: ESP_Multimeter / 12345678)
// #define WIFI_AP_SSID "MyCustomAP"
// #define WIFI_AP_PASSWORD "MyCustomPass"

// Override OTA update password (default: omnimeter)
// #define OTA_PASSWORD_OVERRIDE "MySecureOTAPassword"

#endif // SECRETS_H
